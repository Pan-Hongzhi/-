page {
  background: #f7f7f7;
  padding-bottom: 380rpx;
}

.main {
  display: flex;
  flex-wrap: wrap;
  width: 690rpx;
  margin: 58rpx auto;
  flex-direction: row;
  justify-content: space-between;
}


.header {
  font-size: 28rpx;
  height: 228rpx;
  width: 750rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  background: #3683d6;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0px 4px 20px 0px rgba(0, 49, 107, 0.3);
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 228rpx;
  z-index: 1;
}

.header-desc {
  position: absolute;
  z-index: 2;
  font-size: 28rpx;
  margin: 60rpx 0 0 60rpx;
  line-height: 48rpx;
}
